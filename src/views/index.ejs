<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head') %> 
<body>
	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			
			<% visited.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/productDetail">
							<figure class="product-box_image">
								<img src="/images/products/<%=producto.image%>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2> $<%= (producto.price * (1 - producto.discount/100)).toLocaleString('en-US').replace(',', '.') %>  </h2>
								<span> <%= producto.discount %>% OFF </span>
								<p><%= producto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% inSale.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productDetail">
							<figure class="product-box_image">
								<img src="/images/products/<%= producto.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2> $<%= (producto.price * (1 - producto.discount/100)).toLocaleString('en-US').replace(',', '.')  %>  </h2>
								<span> <%= producto.discount %>% OFF </span>
								<p><%= producto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>
</html>